<form method="post" action="{{ path('membre_delete', {'id': membre.id}) }}" onsubmit="return confirm('Confirmation de suppression pour le compte suivant {{ membre.pseudo }} ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ membre.id) }}">
    <button class="btn btn-danger form-control"><i class="fas fa-trash-alt"></i> Supprimer</button>
</form>
