<form method="post" action="{{ path('commentaire_delete', {'id': commentaire.id}) }}" onsubmit="return confirm('Confirmation de suppression pour le compte suivant {{ commentaire.pseudo }} ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commentaire.id) }}">
    <button class="btn btn-danger form-control"><i class="fas fa-trash-alt"></i> Supprimer</button>
</form>
